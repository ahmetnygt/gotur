mixin authModals()
  //- Login Popup
  .auth-popup#loginPopup(aria-hidden='true')
    .auth-popup__overlay(data-popup-close)
    .auth-popup__dialog(role='dialog' aria-modal='true' aria-labelledby='loginPopupLabel')
      .auth-popup__header.gtr-modal-header
        h5#loginPopupLabel.auth-popup__title Log In
        button.btn-close(type='button' data-popup-close aria-label='Close')
      .auth-popup__body
        .alert.alert-danger.d-none(role='alert' data-error-target='login')
        form#loginForm(novalidate)
          .mb-3
            label.form-label(for='login-identifier') Email or Phone Number
            input#login-identifier.form-control(type='text' name='identifier' placeholder='Email or phone number' autocomplete='username')
            .invalid-feedback
          .mb-3
            label.form-label(for='login-password') Password
            input#login-password.form-control(type='password' name='password' placeholder='Enter your password' autocomplete='current-password')
            .invalid-feedback
          button.btn.btn-primary.w-100(type='submit') Log In
      .auth-popup__footer
        span.text-muted.small Donâ€™t have an account?
        button.btn.btn-link.p-0.ms-1(type='button' data-popup-switch='registerPopup') Sign Up

  //- Register Popup
  .auth-popup#registerPopup(aria-hidden='true')
    .auth-popup__overlay(data-popup-close)
    .auth-popup__dialog(role='dialog' aria-modal='true' aria-labelledby='registerPopupLabel')
      .auth-popup__header.gtr-modal-header
        h5#registerPopupLabel.auth-popup__title Sign Up
        button.btn-close(type='button' data-popup-close aria-label='Close')
      .auth-popup__body
        .alert.alert-danger.d-none(role='alert' data-error-target='register')
        form#registerForm(novalidate)
          .mb-3
            label.form-label(for='register-identifier') Email or Phone Number
            input#register-identifier.form-control(type='text' name='identifier' placeholder='Email or phone number' autocomplete='username')
            .invalid-feedback
          .mb-3
            label.form-label(for='register-password') Password
            input#register-password.form-control(type='password' name='password' placeholder='Create a password' autocomplete='new-password')
            .invalid-feedback
          .mb-3
            label.form-label(for='register-password-confirm') Confirm Password
            input#register-password-confirm.form-control(type='password' name='passwordConfirm' placeholder='Re-enter your password' autocomplete='new-password')
            .invalid-feedback
          button.btn.btn-primary.w-100(type='submit') Sign Up
      .auth-popup__footer
        span.text-muted.small Already have an account?
        button.btn.btn-link.p-0.ms-1(type='button' data-popup-switch='loginPopup') Log In